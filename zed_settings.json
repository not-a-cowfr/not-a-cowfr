{
  "auto_update": true,
  "autosave": "on_focus_change",
  "base_keymap": "VSCode",
  "confirm_quit": true,
  "features": {
    "edit_prediction_provider": "none"
  },

  "active_pane_modifiers": {
    "inactive_opacity": 0.5
  },

  "buffer_font_family": "ComicShannsMono Nerd Font Mono",
  "buffer_font_size": 13,
  "ui_font_family": "ComicShannsMono Nerd Font Mono",
  "ui_font_size": 15,

  "icon_theme": "Bearded Icon Theme",
  "theme": "New Darcula",
  "experimental.theme_overrides": {
    "border": "#2f2f2f",
    "border.variant": "#2a2a2a",
    "editor.active_line.background": "#FFFFFF02",
    "editor.background": "#1d1d1d",
    "editor.gutter.background": "#1d1d1d",
    "hint": "#FFFFFF20",
    "panel.background": "#161616",
    "scrollbar.thumb.background": "#FFFFFF05",
    "status_bar.background": "#161616",
    "tab.active_background": "#1d1d1d",
    "tab_bar.background": "#161616",
    "terminal.background": "#1d1d1d",
    "title_bar.background": "#161616",
    "toolbar.background": "#1d1d1d",
    "syntax": {
      "comment": {
        "font_weight": 100
      },
      "type": {
        "color": "#f0be6e"
      },
      "variable": {
        "color": "#93689c"
      },
      "string.escape": {
        "color": "#ff9549"
      }
    }
  },
  "tabs": {
    "git_status": true
  },
  "unnecessary_code_fade": 0.2,

  "formatter": {
    "external": {
      "command": "cargo fmt",
      "arguments": ["+nightly"]
    }
  },
  "git": {
    "inline_blame": {
      "delay_ms": 35,
      "enabled": true,
      "show_commit_summary": true
    }
  },
  "lsp": {
    "discord_presence": {
      "initialization_options": {
        "details": "working on {workspace}",
        "git_integration": true,
        "idle": {
          "timeout": 30000000000
        },
        "large_image": "{base_icons_url}/zed.png",
        "large_text": "Zed",
        "small_image": "{base_icons_url}/{language}.png",
        "small_text": "{language:u}",
        "state": "writing slop in {filename}"
      }
    }
  }
}
